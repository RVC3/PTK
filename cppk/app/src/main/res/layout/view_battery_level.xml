<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <View
            android:id="@+id/percentImage"
            android:layout_width="21px"
            android:layout_height="16px"
            android:layout_marginLeft="4px"
            android:layout_marginTop="9px"
            android:background="@color/statusBarBatteryGreen" />

        <ImageView
            android:id="@+id/batteryImage"
            android:layout_width="42px"
            android:layout_height="33px"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/system_bar_battery" />
    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="@string/systemBarPersent"
        android:textColor="@color/statusBarTextColor" />
</LinearLayout>