<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black"
    android:orientation="vertical">

    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/finishSyncBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finishSync" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/armSync"
        android:scaleType="fitCenter"
        android:src="@drawable/arm_sync_green_alarm" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/arm_connected_state_activity_title"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/armSyncGreenLineColor"
        android:layout_height="2px" />

    <ScrollView
        android:id="@+id/logScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/arm_sync_log_background"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/logLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</LinearLayout>