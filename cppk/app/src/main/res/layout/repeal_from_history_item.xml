<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repeal_item_time_sell"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/repail_item_text_size" />

        <TextView
            android:id="@+id/repeal_item_number_pd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingStart="28dp"
            android:textSize="@dimen/repail_item_text_size" />

        <TextView
            android:id="@+id/repeal_item_type_pdl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:singleLine="false"
            android:textSize="@dimen/repail_item_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeal_item_reason_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repeal_title_past"
            android:textSize="@dimen/repail_item_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repeal_item_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/repail_item_text_size" />

    </LinearLayout>


</LinearLayout>
