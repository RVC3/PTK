<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/app_padding_10dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_printer_mac_address_label" />

        <TextView
            android:id="@+id/macAddress"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="00:00:00:00:00:00" />

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/bindDevice"
            style="@style/Core.App.Widget.Button.Gray"
            android:layout_width="match_parent"
            android:text="@string/device_any_bind_device"
            android:layout_height="wrap_content" />

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/testConnection"
            style="@style/Core.App.Widget.Button.Gray"
            android:layout_width="match_parent"
            android:text="@string/device_any_test_connection"
            android:layout_height="wrap_content" />

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/printAdjustingTable"
            style="@style/Core.App.Widget.Button.Gray"
            android:layout_width="match_parent"
            android:text="@string/settings_printer_print_adjusting_table"
            android:layout_height="wrap_content" />

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/activateEKLZ"
            style="@style/Core.App.Widget.Button.Gray"
            android:layout_width="match_parent"
            android:text="@string/settings_printer_activate_eklz"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ru.ppr.core.ui.widget.SimpleLseView
        android:id="@+id/simpleLseView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>