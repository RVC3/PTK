<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/controlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/main_screen_control_label"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/transferDirectionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="от АВТО ДОМОДЕДОВО" />

    </LinearLayout>


    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/readBscBtn"
        style="@style/Core.App.Widget.Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_screen_bsc_btn"
        android:textSize="32sp" />

    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/readBarcodeBtn"
        style="@style/Core.App.Widget.Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_screen_barcode_btn"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/saleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:text="@string/main_screen_sale_label"
        android:textSize="20sp" />

    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/sellPdBtn"
        style="@style/Core.App.Widget.Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_screen_pd_btn"
        android:textSize="32sp" />

    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/sellBaggageBtn"
        style="@style/Core.App.Widget.Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_screen_baggage_btn"
        android:textSize="32sp" />

    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/sellTransferBtn"
        style="@style/Core.App.Widget.Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_screen_transfer_btn"
        android:textSize="32sp" />

    <Space
        android:id="@+id/sellSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="gone" />

    <Space
        android:id="@+id/transferOnlySpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/menuBtn"
        style="@style/Core.App.Widget.Button.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_menu_btn" />

</LinearLayout>