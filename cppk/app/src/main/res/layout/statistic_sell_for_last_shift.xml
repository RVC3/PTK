<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/black_title_with_white_text"
        android:layout_height="wrap_content"
        android:padding="@dimen/statistic_padding_for_title"
        android:text="@string/statistic_for_last_shift" />

    <LinearLayout
        android:id="@+id/dataContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/statistic_margin_left_for_field"
                android:paddingRight="@dimen/statistic_margin_left_for_field"
                android:paddingTop="@dimen/statistic_margin_left_for_field">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/statistic_sell_shift_title"
                            style="@style/statisticsSaleForLastShift_1"
                            android:layout_marginRight="5dp"
                            android:text="@string/statistic_SHIFT" />

                        <TextView
                            android:id="@+id/statistic_sell_shift_number"
                            style="@style/statisticsSaleForLastShift_1"
                            android:text="54" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/statistic_sell_status"
                        style="@style/regular_field"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/statistics_sale_for_last_shift_status_blue_bg"
                        android:gravity="center"
                        android:text="@string/statistic_OPENED"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/statistic_item_title_style"
                            android:text="@string/statistic_shift_opened"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:id="@+id/statistick_sell_date_open_shift"
                            style="@style/statistic_item_title_style"
                            android:text="12.12.2012 12:12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/statistic_item_title_style"
                            android:text="@string/statistic_shift_close"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:id="@+id/statistick_sell_date_close_shift"
                            style="@style/statistic_item_title_style" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/statistic_item_margin_betwen_field">

                <TextView
                    android:id="@+id/statistic_sell_count_pd_title"
                    style="@style/statistics_green_field"
                    android:layout_alignParentTop="true"
                    android:background="@color/green"
                    android:text="@string/statistic_count_pd" />

                <TextView
                    android:id="@+id/statistic_sell_count_pd"
                    style="@style/statistics_title_item"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/statistic_sell_count_pd_title"
                    android:layout_marginLeft="@dimen/statistic_margin_left_for_field"
                    android:text="@string/statistic_count" />

                <TextView
                    android:id="@+id/statistic_sell_count_pd_value"
                    style="@style/statistics_title_item"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/statistic_sell_count_pd_title" />

                <TextView
                    android:id="@+id/statistic_sell_amount_pd"
                    style="@style/statistics_title_item"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/statistic_sell_count_pd"
                    android:layout_marginLeft="@dimen/statistic_margin_left_for_field"
                    android:text="@string/amount" />

                <TextView
                    android:id="@+id/statistic_sell_amount_pd_value"
                    style="@style/statistics_title_item"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/statistic_sell_count_pd" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/statistic_amount_pd_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/statistic_margin_left_for_field"
                android:orientation="vertical"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/statistic_item_margin_betwen_field">

                <TextView
                    android:id="@+id/statistic_sell_count_baggage_title"
                    style="@style/statistics_green_field"
                    android:layout_alignParentTop="true"
                    android:background="@color/green"
                    android:text="@string/statistic_count_baggage" />

                <TextView
                    android:id="@+id/statistic_sell_count_baggage"
                    style="@style/statistics_title_item"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/statistic_sell_count_baggage_title"
                    android:text="@string/statistic_count"
                    android:layout_marginLeft="@dimen/statistic_margin_left_for_field" />

                <TextView
                    android:id="@+id/statistic_sell_count_baggage_value"
                    style="@style/statistics_title_item"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/statistic_sell_count_baggage_title"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/statistic_sell_amount_baggage"
                    style="@style/statistics_title_item"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/statistic_sell_count_baggage"
                    android:text="@string/amount"
                    android:layout_marginLeft="@dimen/statistic_margin_left_for_field" />

                <TextView
                    android:id="@+id/statistic_sell_amount_baggage_value"
                    style="@style/statistics_title_item"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/statistic_sell_count_baggage"
                    android:gravity="right" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/statistic_amount_baggage_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/statistic_margin_left_for_field"
                android:orientation="vertical"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/statistic_item_margin_betwen_field">

                <TextView
                    android:id="@+id/statistic_sell_count_transfer_title"
                    style="@style/statistics_green_field"
                    android:layout_alignParentTop="true"
                    android:background="@color/green"
                    android:text="@string/statistic_count_transfer" />

                <TextView
                    android:id="@+id/statistic_sell_count_transfer"
                    style="@style/statistics_title_item"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/statistic_sell_count_transfer_title"
                    android:text="@string/statistic_count"
                    android:layout_marginLeft="@dimen/statistic_margin_left_for_field" />

                <TextView
                    android:id="@+id/statistic_sell_count_transfer_value"
                    style="@style/statistics_title_item"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/statistic_sell_count_transfer_title"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/statistic_sell_amount_transfer"
                    style="@style/statistics_title_item"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/statistic_sell_count_transfer"
                    android:text="@string/amount"
                    android:layout_marginLeft="@dimen/statistic_margin_left_for_field" />

                <TextView
                    android:id="@+id/statistic_sell_amount_transfer_value"
                    style="@style/statistics_title_item"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/statistic_sell_count_transfer"
                    android:gravity="right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:orientation="horizontal">

                <TextView
                    style="@style/statistics_green_field"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/fee" />

                <TextView
                    android:id="@+id/statistic_sell_fee_amount"
                    style="@style/statistics_green_field"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/statistic_margin_left_for_field" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

</LinearLayout>