<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="@dimen/app_padding_10dp">

    <EditText
        android:id="@+id/serial_number"
        style="@style/App.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/printer_enter_serial_number_dialog_hint"
        android:inputType="text">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/printer_enter_serial_number_dialog_error"
        android:textColor="@color/red"
        android:textSize="22sp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ru.ppr.core.ui.widget.SingleClickButton
        android:id="@+id/ok"
        style="@style/Core.App.Widget.Button.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/printer_enter_serial_number_dialog_ok" />

</LinearLayout>