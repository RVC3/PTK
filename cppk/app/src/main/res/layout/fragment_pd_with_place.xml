<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/pdTitle"
            style="@style/tv_pd_info_feild_for_one_pd"
            android:textColor="@color/red"
            tools:text="Разовый полный с местом" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pd_fragment_horizontal_margin_large"
            android:layout_marginRight="@dimen/pd_fragment_horizontal_margin_large"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">

            <TextView
                android:id="@+id/depStationName"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:maxLines="2"
                android:textStyle="bold"
                tools:text="ЧЕХОВ" />

            <ImageView
                android:id="@+id/directionImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/there_direction" />

            <TextView
                android:id="@+id/destStationName"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:maxLines="2"
                android:paddingEnd="7dp"
                android:textStyle="bold"
                tools:text="СЕРПУХОВ" />
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/trainCategoryName"
            style="@style/tv_pd_info_feild_for_one_pd"
            android:visibility="gone"
            tools:text="Пассажирский" />

        <TextView
            android:id="@+id/pdDateTimeLabel"
            style="@style/tv_pd_info_feild_for_one_pd"
            android:layout_marginTop="0dp"
            android:text="@string/pd_with_place_departure_date_title" />

        <TextView
            android:id="@+id/pdDateTimeValue"
            style="@style/tv_pd_info_feild_for_one_pd"
            android:layout_gravity="end"
            android:layout_marginTop="-6dp"
            tools:text="15.04.2015 05:21" />

        <TextView
            android:id="@+id/passengerLabel"
            style="@style/tv_pd_info_feild_for_one_pd"
            android:layout_marginTop="0dp"
            android:text="@string/pd_with_place_passenger_title" />

        <TextView
            android:id="@+id/passengerValue"
            style="@style/tv_pd_info_feild_for_one_pd"
            android:layout_gravity="end"
            android:layout_marginTop="-6dp"
            tools:text="Иванов И. И." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/documentLabel"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:text="@string/pd_with_place_document_title" />

            <TextView
                android:id="@+id/documentValue"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-6dp"
                android:layout_weight="0.5"
                android:gravity="end"
                tools:text="***4545" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trainLabel"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:text="@string/pd_with_place_train_number_title" />

            <TextView
                android:id="@+id/trainValue"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-6dp"
                android:layout_weight="0.5"
                android:gravity="end"
                tools:text="7081" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wagonLabel"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:text="@string/pd_with_place_wagon_number_title" />

            <TextView
                android:id="@+id/wagonValue"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-6dp"
                android:layout_weight="0.5"
                android:gravity="end"
                tools:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/placeLabel"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:text="@string/pd_with_place_place_number_title" />

            <TextView
                android:id="@+id/placeValue"
                style="@style/tv_pd_info_feild_for_one_pd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-6dp"
                android:layout_weight="0.5"
                android:gravity="end"
                tools:text="1" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>