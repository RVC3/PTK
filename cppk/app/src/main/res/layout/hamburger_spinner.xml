<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hamburger_spinner_text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/hamburger_spinner_margin"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="@dimen/hamburger_spinner_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/hamburger_spinner_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/hamburger_spinner_text_view_title"
        android:layout_margin="@dimen/hamburger_spinner_margin"
        android:layout_marginRight="@dimen/hamburger_spinner_img_right_margin"
        android:contentDescription="@null"
        android:src="@drawable/icon_list" />

    <Spinner
        android:id="@+id/hamburger_spinner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hamburger_spinner_text_view_title"
        android:background="@drawable/bg_white_with_corners_5dp"
        android:dropDownWidth="match_parent"
        android:focusable="true"></Spinner>

</RelativeLayout>
