<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/test_1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sqlite_transaction_test_test_1_1" />

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/test_1_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sqlite_transaction_test_test_1_2" />

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/test_1_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sqlite_transaction_test_test_1_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/test_2_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sqlite_transaction_test_test_2_1" />

        <ru.ppr.core.ui.widget.SingleClickButton
            android:id="@+id/test_2_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sqlite_transaction_test_test_2_2" />

    </LinearLayout>

</LinearLayout>