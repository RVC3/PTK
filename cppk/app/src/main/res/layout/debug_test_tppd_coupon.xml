<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/run_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_padding_for_item"
        android:layout_marginLeft="@dimen/horizontal_padding_for_item"
        android:layout_marginTop="@dimen/vertical_padding_for_item"
        android:text="Запустить тест" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/vertical_padding_for_item"
            android:text="Номер талона" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@color/gray_2"
            android:gravity="center"
            android:padding="@dimen/vertical_padding_for_item"
            android:text="Ожид. валид." />

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/vertical_padding_for_item"
            android:text="Факт. валид." />

    </LinearLayout>

    <ListView
        android:id="@+id/test_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
